    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<!-- Modal -->

<div class="modal fade" id="addBlogModal" tabindex="-1" role="dialog" aria-labelledby="addBlogModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Blog Ekle</h5>
            </div>
            <form id="addBlog" asp-controller="Blog" asp-action="Add" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group">
                        <label>Category</label>
                        <select class="js-example-basic-multiple" id="categories" name="categories[]" multiple="multiple" asp-items="ViewBag.Categories" style="width:100%">
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input type="text" class="form-control" asp-for="Title" placeholder="Enter Title">
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input type="text" class="form-control" asp-for="Description" placeholder="Enter Description">
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageUrl"></label>
                        <input type="file" class="form-control-file" asp-for="ImageUrl">
                    </div>
                    <div class="form-group">
                        <label asp-for="HtmlContent"></label>
                        <input type="text" class="form-control" asp-for="HtmlContent" placeholder="Enter Content">
                        @Html.ValidationMessageFor(model => model.HtmlContent, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" checked asp-for="IsHome">
                            <label class="custom-control-label" for="IsHome">Onay</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" checked asp-for="IsAppproved">
                            <label class="custom-control-label" for="IsAppproved">Anasayfa</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" asp-for="IsSlider">
                            <label class="custom-control-label" for="IsSlider">Slider</label>
                        </div>
                    </div>                    
                </div>
                <div class="modal-footer">
                    <label id="ajax-loading" style="float:left;display:none">
                        <img height="50px" src="~/Admin/img/loading.gif" />
                    </label>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-success">Gönder</button>
                </div>
            </form>
        </div>
    </div>
</div>
