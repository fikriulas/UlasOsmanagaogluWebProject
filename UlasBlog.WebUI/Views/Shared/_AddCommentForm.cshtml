<!-- Modal -->

<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Bir Yorum Yapın @ViewBag.Mesaj</h3>
    <form id="AddComment" asp-controller="Home" asp-action="AddComment" method="post" enctype="multipart/form-data" class="p-5 bg-light">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" class="form-control" asp-for="Name">
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input type="email" class="form-control" asp-for="Email">
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label asp-for="Message"></label>
            <textarea asp-for="Message" cols="30" rows="10" class="form-control"></textarea>
            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <input type="hidden" id="BlogId" name="BlogId" value="@ViewBag" />
            <button type="submit" class="btn btn-primary"> Gönder </button>
        </div>
    </form>
</div>
