@if (Model.FooterText != "")
{
    <div class="row border-top">
        <div class="col-md-12 text-center mt-2">
            <p class="small">                
                @Html.Raw(Model.FooterText)
            </p>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-12 text-center mt-2">
            <p class="small">                
            </p>
        </div>
    </div>
}



