@model IEnumerable<ContactInformation>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<!-- Messages Dropdown Menu -->
@if (User.IsInRole("admin"))
{
    <li class="nav-item dropdown">
        <a class="nav-link" data-toggle="dropdown" href="#">
            <i class="far fa-comments"></i>
            <span class="badge badge-danger navbar-badge">@Model.Count()</span>
        </a>
        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
            @foreach (var contact in Model)
            {
                <a asp-controller="Admin" asp-action="Contact" class="dropdown-item">
                    <!-- Message Start -->
                    <div class="media">
                        <div class="media-body">
                            <h3 class="dropdown-item-title">
                                @contact.Name
                                <span class="float-right text-sm text-danger"><i class="fas fa-star"></i></span>
                            </h3>
                            <p class="text-sm">@contact.Message ...</p>
                            <p class="text-sm text-muted"><i class="far fa-clock mr-1"></i> @contact.RelativeTime</p>
                        </div>
                    </div>
                    <!-- Message End -->
                </a>
                <div class="dropdown-divider"></div>
            }

            <a asp-controller="Admin" asp-action="Contact" class="dropdown-item dropdown-footer">See All Messages</a>
        </div>
    </li>
}