*@
<div class="modal fade" id="editCategoryModal" tabindex="-1" role="dialog" aria-labelledby="editCategoryModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Kategori Ekle</h5>
            </div>
            <form id="editCategory" asp-controller="Category" asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input type="hidden" asp-for="Id" value="" />
                        <input type="text" class="form-control" asp-for="Name" placeholder="Enter Category Name">
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="modal-footer">
                    <label id="ajax-loading" style="float:left;display:none">
                        <img height="50px" src="~/Admin/img/loading.gif" />
                    </label>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Gönder</button>
                </div>
            </form>
        </div>
    </div>
</div>