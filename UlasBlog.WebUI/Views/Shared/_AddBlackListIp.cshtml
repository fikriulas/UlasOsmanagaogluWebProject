<!-- Modal -->

<div class="modal fade" id="AddBlackListIpModal" tabindex="-1" role="dialog" aria-labelledby="AddBlackListIpModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Kara Listeye Ip Ekle</h5>
            </div>
            <form id="AddBlackListIp" asp-controller="Admin" asp-action="AddIpList" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Ip"></label>
                        <input type="text" class="form-control" asp-for="Ip">                        
                        @Html.ValidationMessageFor(model => model.Ip, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label asp-for="Note"></label>
                        <input type="text" class="form-control" asp-for="Note">
                        @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                    </div>                    
                </div>
                <div class="modal-footer">
                    <label id="ajax-loading" style="float:left;display:none">
                        <img height="50px" src="~/Admin/img/loading.gif" />
                    </label>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-success">Gönder</button>
                </div>
            </form>
        </div>
    </div>
</div>
