*@
<div class="modal fade" id="editContactModal" tabindex="-1" role="dialog" aria-labelledby="editContactModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Yorum Ayrıntısı</h5>
            </div>
            <div class="modal-body">
                <form id="deleteContact" asp-controller="Admin" asp-action="ContactDelete" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input type="hidden" asp-for="Id" value="" />
                        <input disabled type="text" class="form-control" asp-for="Name" placeholder="Enter Category Name">
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input disabled type="text" class="form-control" asp-for="Email" placeholder="Enter Category Name">
                    </div>
                    <div class="form-group">
                        <label asp-for="dateAdded"></label>
                        <input disabled type="text" class="form-control" asp-for="dateAdded" placeholder="Enter Category Name">
                    </div>
                    <div class="form-group">
                        <label asp-for="Message"></label>
                        <input disabled type="text" class="form-control" asp-for="Message" placeholder="Enter Category Name">
                    </div>
                    <div id="replySection" style="display:none;" class="form-group">
                        <label> Yanıt: </label>
                        <textarea type="text" class="form-control" name="reply" id="reply" placeholder="Yanıtınız" rows="7" cols="7"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <label id="ajax-loading" style="float:left;display:none">
                    <img height="50px" src="~/Admin/img/loading.gif" />
                </label>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                <button type="submit" id="replyBtn" onclick="replySection()" class="btn btn-warning">Yanıt Ver</button>
            </div>      
        </div>
    </div>
</div>