<!doctype html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Josefin+Sans:300, 400,700|Inconsolata:400,700" rel="stylesheet">
    <link rel="stylesheet" href="/Home/css/bootstrap.css">
    <link rel="stylesheet" href="/Home/css/animate.css">
    <link rel="stylesheet" href="/Home/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/Home/fonts/ionicons/css/ionicons.min.css">
    <link rel="stylesheet" href="/Home/fonts/fontawesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/Home/fonts/flaticon/font/flaticon.css">
    <!--toastr-->
    <link rel="stylesheet" href="~/Home/css/iziToast.min.css" />
    <!-- Theme Style -->
    <link rel="stylesheet" href="/Home/css/style.css">

</head>
<body>
    <div class="wrap">
        <header role="banner">
            <div class="top-bar">
                <div class="container">
                    <div class="row">
                        <div class="col-9 social">
                            @await Component.InvokeAsync("HeaderSocialMedia")
                        </div>
                        <div class="col-3 search-top">
                            <!-- <a href="#"><span class="fa fa-search"></span></a> -->
                        </div>
                    </div>
                </div>
            </div>
            <nav class="navbar navbar-expand-md  navbar-light bg-light">
                <div class="container">
                    <div class="collapse navbar-collapse" id="navbarMenu">
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                            </li>
                            <!--Category-->
                            @await Component.InvokeAsync("CategoryMenu")
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Contact">İletişim</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <!-- END header -->
        <!--slider-->
        @if (ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Index")
        {
            @await Component.InvokeAsync("Slider");
        }<!-- END section -->
        <section class="site-section py-sm">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                    </div>
                </div>
                <div class="row blog-entries">
                    <div class="col-md-12 col-lg-8 main-content">
                        <div class="row">
                            @RenderBody()
                        </div>
                        <div class="row mt-5">

                        </div>
                    </div>
                    <!-- END main-content -->
                    <div class="col-md-12 col-lg-4 sidebar">

                        <!-- END sidebar-box -->
                        <!-- END sidebar-box -->
                        @await Component.InvokeAsync("PopulerPost")
                        <!-- END sidebar-box -->
                        @await Component.InvokeAsync("CategorySidebar")
                        <!-- END sidebar-box -->
                    </div>
                    <!-- END sidebar -->
                </div>
            </div>
        </section>
        <footer class="site-footer">
            <div class="container">
                <div class="row mb-5">
                    <div class="col-md-4">
                        <!--Latest Post-->
                        @await Component.InvokeAsync("LatestPost")
                    </div>
                    <div class="col-md-6 ml-auto">
                        <div class="row">
                            <div class="col-md-7">
                                <div class="mb-5">
                                    <h3>Hızlı Linkler</h3>
                                    <ul class="list-unstyled">
                                        <li><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                                        <li><a asp-controller="Home" asp-action="Contact">İletişim</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-1"></div>
                            <div class="col-md-4">

                                <div class="mb-5">
                                    <h3>Sosyal Medya</h3>
                                    <ul class="list-unstyled footer-social">
                                        @await Component.InvokeAsync("FooterSocialMedia")
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @await Component.InvokeAsync("FooterText")
            </div>
        </footer> <!-- END footer -->
    </div>
    <!-- loader -->
    <div id="loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#f4b214" /></svg></div>
    <script src="/Home/js/jquery-3.2.1.min.js"></script>
   <script src="/Home/js/jquery-migrate-3.0.0.js"></script> 
    
    <script src="/Home/js/popper.min.js"></script>
    <script src="/Home/js/bootstrap.min.js"></script>
    <script src="/Home/js/owl.carousel.min.js"></script>
    <script src="/Home/js/jquery.waypoints.min.js"></script>
    <script src="/Home/js/jquery.stellar.min.js"></script>
    <script src="/Home/js/main.js"></script>
    @RenderSection("Blog", false)
    @RenderSection("Contact", false)
</body>
    </html>
