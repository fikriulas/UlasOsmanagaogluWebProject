@model PasswordChange
@{
    ViewData["Title"] = "Admin Panel | Şifre Değiştir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    ul {
        list-style-type: none;
        margin-bottom:0;
    }
</style>
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Şifre Değiştir</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Admin</a></li>
                    <li class="breadcrumb-item"><a asp-controller="User" asp-action="Profile">Profil</a></li>
                    <li class="breadcrumb-item active">Şifre Değiştir</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-gray-dark">
                    <div class="card-header">
                        <h3 class="card-title">Şifre Değiştir</h3>
                    </div>
                    <form asp-controller="User" asp-action="PasswordChange" method="post" class="form-horizontal">
                        <div class="card-body" style="display: block;">
                            <div class="alert alert-default-danger" role="alert" asp-validation-summary="ModelOnly">

                            </div>
                            <div class="form-group row">
                                <label asp-for="OldPassword" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <div class="input-group mb-3">
                                        <input asp-for="OldPassword" class="form-control" placeholder="Eski Şifre" />
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-eye-slash" id="OldToggle"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div style="margin-top:-10px;margin-left:5px;margin-bottom:5px;">@Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })</div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="NewPassword" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <div class="input-group mb-3">
                                        <input asp-for="NewPassword" class="form-control" placeholder="Yeni Şifre" />
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-eye-slash" id="newToggle"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div style="margin-top:-10px;margin-left:5px;margin-bottom:5px;">@Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })</div>

                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <div class="input-group mb-3">
                                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Yeni Şifre Tekrar" />
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-eye-slash" id="confirmToggle"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div style="margin-top:-10px;margin-left:5px;margin-bottom:5px;">@Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })</div>

                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-danger">Gönder</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section PasswordChange{

    @if (ViewBag.SuccessChange != null)
    {
        <script>
            toastr.success("@ViewBag.SuccessChange");
        </script>
    }
    <script src="~/Admin/js/PasswordChange.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
