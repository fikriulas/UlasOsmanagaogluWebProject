@model IEnumerable<BlogDetail>
@{
    ViewData["Title"] = "Home Page";
}

@foreach (var blog in Model)
{
    <div class="col-md-6">
        <a asp-controller="Home" asp-action="Blog" asp-route-id="@blog.Id" class="blog-entry element-animate" data-animate-effect="fadeIn">
            <img src="/Home/Blog/Img/@blog.ImageUrl" alt="Image placeholder">
            <div class="blog-content-body">
                <div class="post-meta">
                    <span class="author mr-2"><img src="/Home/images/person_1.jpg" alt="Colorlib"> Colorlib</span>&bullet;
                    <span class="mr-2">@blog.DateAdded.ToString("dd MMM yyyy H:mm")</span> &bullet;
                    <span class="ml-2"><span class="fa fa-comments"></span> @blog.totalComment</span>
                </div>
                <h2>@blog.Title</h2>
            </div>
        </a>
    </div>
}
