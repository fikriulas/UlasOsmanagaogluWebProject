@model ForgotPasswordViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Yönetim Paneli | Şifremi Unuttum</title>
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/Admin/AdminLTE/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="/Admin/AdminLTE/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/Admin/AdminLTE/dist/css/adminlte.min.css">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a><b>Yönetim</b>Paneli</a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-header">
                Şifremi Unuttum
            </div>
            <form id="LoginForm" asp-controller="Home" asp-action="ForgotPassword" method="post" enctype="multipart/form-data">
                <div class="card-body login-card-body">
                    <p class="login-box-msg">E-Mail Adresinizi Girin</p>
                    @if (ViewBag.PasswordReset != null)
                    {
                        <div class="alert alert-default-success" role="alert">  
                            Şifre Değiştirme E-Maili Gönderildi
                        </div>
                    }
                    <div class="text-danger text-center" asp-validation-summary="ModelOnly">

                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div style="margin-top:-10px;margin-left:5px;margin-bottom:5px;">@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })</div>



                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary btn-block">Gönder</button>
                </div>
            </form>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="/Admin/AdminLTE/lugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/Admin/AdminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/Admin/AdminLTE/dist/js/adminlte.min.js"></script>
</body>
</html>
