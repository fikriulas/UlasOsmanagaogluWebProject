@model LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Yönetim Paneli | Giriş Yap</title>
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/Admin/AdminLTE/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="/Admin/AdminLTE/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/Admin/AdminLTE/dist/css/adminlte.min.css">
    <!-- Toastr -->
    <link rel="stylesheet" href="/Admin/AdminLTE/plugins/toastr/toastr.min.css">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a><b>Yönetim</b>Paneli</a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Giriş Yapın</p>
                @if (ViewBag.SuccessSave != null)
                {
                    <div class="alert alert-default-success" role="alert">
                        Şifreniz Başarıyla Değiştirildi
                    </div>
                }
                <div class="text-danger text-center" asp-validation-summary="ModelOnly">

                </div>



                <form id="LoginForm" asp-controller="Home" asp-action="Login" method="post" enctype="multipart/form-data">
                    <div class="input-group mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div style="margin-top:-10px;margin-left:5px;margin-bottom:5px;">@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })</div>
                    <div class="input-group mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Şifre">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div style="margin-top:-10px;margin-left:5px;margin-bottom:5px;">@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })</div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input asp-for="RememberMe">
                                <label asp-for="RememberMe">
                                    Beni Hatırla
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                <div class="social-auth-links text-center mb-3">
                    <p>- Veya -</p>
                    <a href="#" class="btn btn-block btn-primary">
                        <i class="fab fa-facebook mr-2"></i> Facebook İle Giriş Yap
                    </a>
                    <a href="#" class="btn btn-block btn-danger">
                        <i class="fab fa-google-plus mr-2"></i> Google ile Giriş Yap
                    </a>
                </div>
                <!-- /.social-auth-links -->

                <p class="mb-1">
                    <a asp-controller="Home" asp-action="ForgotPassword">Şifremi Unuttum</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="/Admin/AdminLTE/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/Admin/AdminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/Admin/AdminLTE/dist/js/adminlte.min.js"></script>
    <script src="/Admin/AdminLTE/plugins/toastr/toastr.min.js"></script>
    @if (ViewData["BlogAlert"] != null)
    {
        <script>
            @Html.Raw(ViewData["BlogAlert"])
        </script>
    }
</body>
</html>







